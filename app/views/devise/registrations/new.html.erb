<h2>Sign up</h2>

<table width=100% style="margin-top:20px;">
  <tr>
    <td width=50%>
      <h2>Don't have an account yet ? Please sign up</h2>
      <br/><br/>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div><%= f.label :email %>
            <br/>
            <%= f.email_field :email, :autofocus => true %></div>
          <br/>
          <div><%= f.label :name %>
            <br/>
            <%= f.text_field :name %>
          </div>
          <br/>
          <div><%= f.label :role_id %>
            <br/>
            <%=collection_select(:user, :role_id, Role.all, :id, :name  ) %>
          </div>
          <br/>
          <div><%= f.label :password %>
            <br/>
            <%= f.password_field :password %></div>
          <br/>
          <div><%= f.label :password_confirmation %>
            <br/>
            <%= f.password_field :password_confirmation %></div>
          <br/><br/>
          <div><%= f.submit "Sign up", :class=>"art-button" %></div>
      <% end %>



    </td>
    <td  width=50% style="border-left:2px solid;padding-left:20px" valign=top>
      <h2>Already have an account ? Please sign in</h2>
      <br/><br/>
      <a class="art-button" href="/users/sign_in">Sign In</a>
      <br/><br/>
      <br/> <br/>
      <%= render "devise/shared/links" %>
    </td>
  </tr>
</table>






