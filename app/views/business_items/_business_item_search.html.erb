<%= form_tag business_items_path, :method => 'get', :id => "business_items_search" , :class =>"none" do %>

    <div style="border:1px solid #DFDFDF;width:100%;margin-top:10px;margin-bottom:10px;">
      <table style="margin:5px;">
        <tr>
          <td width=45%>Search Text</td>
          <td width=20%>Company Name</td>
          <td width=20%>Business Category</td>
          <td width=15%></td>

        </tr>
        <tr>
          <td><%= text_field_tag :search, params[:search], :class => "search_text_field", :style=>"width:100%" %></td>
          <td><%= text_field_tag :company_name, params[:company_name], :class => "search_text_field",:style=>"width:100%" %></td>
          <td><%= text_field_tag :business_item_category_name, params[:business_item_category_name], :class => "search_text_field" ,:style=>"width:100%" %></td></td>

          <td style=""><%= submit_tag "Search Business" , :class=>"art-button" %></td>

        </tr>
      </table>
    </div>

<% end %>