<h3>Listing addresses</h3>

<table>
  <tr>
    <th>Contact name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Fax</th>
    <th>Address line one</th>
    <th>Address line two</th>
    <th>Postal code</th>
    <th>City</th>
    <th>Country</th>
    <th>Website</th>
    <th>Google map code</th>
    <th>Chat code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @addresses = Address.where("user_id = ? ", current_user.id).paginate(:per_page => 4, :page => params[:page]) %>

  <% @addresses.each do |address| %>
      <tr>
        <td><%= address.contact_name %></td>
        <td><%= address.email %></td>
        <td><%= address.phone %></td>
        <td><%= address.fax %></td>
        <td><%= address.address_line_one %></td>
        <td><%= address.address_line_two %></td>
        <td><%= address.postal_code %></td>
        <td><%= address.city %></td>
        <td><%= address.country %></td>
        <td><%= address.website %></td>
        <td><%= address.google_map_code %></td>
        <td><%= address.chat_code %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

