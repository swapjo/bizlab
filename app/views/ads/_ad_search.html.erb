<div class="row">
  <div class="small-6 small-centered columns" style="width:100%;margin-top:10px;margin-bottom:10px;">
    <%= form_tag ads_path, :method => 'get', :id => "ads_search" , :class =>"none" do %>
          <table style="width:100%; border:0px">
            <tr>
              <td style="padding: 0px; ">
                <%= text_field_tag :search, params[:search], :class => "search_text_field" , :style=>"height:100%;font-size:16px" %>
              </td>
              <td style="padding: 0px;">
                <button type="submit" class="btn btn-default">Find</button>
              </td>
            </tr>
          </table>
    <% end %>
  </div>
</div>

