<h1>Listing companies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Owner name</th>
    <th>User</th>
    <th>Info</th>
    <th>Description</th>
    <th>Phone</th>
    <th>Fax</th>
    <th>Email</th>
    <th>Ispublished</th>
    <th>Isapproved</th>
    <th>Image</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%= company.name %></td>
    <td><%= company.owner_name %></td>
    <td><%= company.user_id %></td>
    <td><%= company.info %></td>
    <td><%= company.description %></td>
    <td><%= company.phone %></td>
    <td><%= company.fax %></td>
    <td><%= company.email %></td>
    <td><%= company.ispublished %></td>
    <td><%= company.isapproved %></td>
    <td><%= company.image %></td>
    <td><%= company.address_id %></td>
    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

