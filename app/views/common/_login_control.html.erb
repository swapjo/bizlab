<% if user_signed_in? %>
    <div class="btn-group">
      <%= current_user.name %>
      <% if current_user.role.name == "admin" %>
          <li><%= link_to "Control Panel", "/admin" %></li>
      <% else %>
          <li><%= link_to "My Account", "/info/user_home" %></li>
      <% end %>
      <li><%= link_to "Log out", destroy_user_session_path, :method => :delete %></li>
    </div>
<% else %>
    <div class="btn-group" style="font-size:12px; color:#fffff; font-weight: bold">
      <a href="#loginModal" role="button" data-toggle="modal">Log In</a>
      |
      <a href="#registerModal" role="button" data-toggle="modal">Register</a>
    </div>
<% end %>


<!-- loginModal Box -->
<div id="loginModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Log In</h3>
  </div>
  <%= form_for("user", :url => user_session_path) do |f| %>
      <div class="modal-body">
        <div class="row-fluid">
          <div class="span4 text-right text-right">
            <%= f.label :email %>
          </div>
          <div class="span8">
            <%= f.email_field :email, :autofocus => true %>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span4 text-right">
            <%= f.label :role_id %>
          </div>
          <div class="span8">
            <%=collection_select(:user, :role_id, Role.all, :id, :name  ) %>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span4 text-right">
            <%= f.label :password %>
          </div>
          <div class="span8">
            <%= f.password_field :password %>

          </div>
        </div>
        <div class="row-fluid">
          <div class="span4 text-right">
            <%= f.label :remember_me %>
          </div>
          <div class="span8">
            <%= f.check_box :remember_me %>
          </div>
        </div>
        <%= link_to "Forgot your password?", new_password_path('user') ,:class=>"secondary button" ,:style => {:background_color=>"#0000ff"}  %>
      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button type="submit" class="btn btn-primary">Log In</button>
      </div>
  <% end %>
</div>

